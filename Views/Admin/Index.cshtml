@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.lineicons.com/3.0/lineicons.css">
    <style>
        #map {
            width: 100%;
            height: 750px; /* Atur tinggi sesuai kebutuhan */
            border-radius: 0.5rem;
        }
    </style>
}

<div class="main-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Dashboard</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Home</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-12">
            <div class="card w-100 overflow-hidden rounded-4">
                <div id="map"></div>
            </div>
        </div>

        <div class="col-lg-3 col-12">
            <div class="d-flex flex-column gap-3">
                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <i class="bx bx-water" style="color: #0d6efd; font-size: 3rem;"></i>
                        </div>
                        <div class="mt-0">
                            <h4 class="mb-0" id="total-awlr">0</h4>
                            <p class="mb-0">Total AWLR</p>
                        </div>
                    </div>
                </div>

                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <i class="bx bx-cloud-rain" style="color: #1abc9c; font-size: 3rem;"></i>
                        </div>
                        <div class="mt-0">
                            <h4 class="mb-0" id="total-arr">0</h4>
                            <p class="mb-0">Total ARR</p>
                        </div>
                    </div>
                </div>

                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <i class="bx bx-droplet" style="color: #ffa600; font-size: 3rem;"></i>
                        </div>
                        <div class="mt-0">
                            <h4 class="mb-0" id="total-awlr-arr">0</h4>
                            <p class="mb-0">Total AWLR & ARR</p>
                        </div>
                    </div>
                </div>

                <div class="card w-100 rounded-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <i class="bx bx-wifi-off" style="color: #ef5350fd; font-size: 3rem;"></i>
                        </div>
                        <div class="mt-0">
                            <h4 class="mb-0" id="total-offline">0</h4>
                            <p class="mb-0">Totalk Pos Offline</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/Admin/dashboard.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap" async defer></script>
}