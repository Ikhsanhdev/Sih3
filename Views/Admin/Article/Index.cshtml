@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Article";
}

@section Styles {
    <link href="~/asset/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}

<div class="main-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3"><i class="bx bx-article"></i> Article</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Article</li>
                </ol>
            </nav>
        </div>

        <div class="ms-auto">
            <div class="btn-group">
                <a sp-area="" asp-controller="Admin" asp-action="CreateEditArticle" class="btn btn-success">Create</a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="table-article" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">No</th>
                            <th>Judul</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>Terkahir Update</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/asset/plugins/datatable/js/jquery.dataTables.min.js"></script>
	<script src="~/asset/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/pages/admin/article.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.min.js"></script>
}