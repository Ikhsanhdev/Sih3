@section Scripts {
    <script src="~/js/pages/Home/Home.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap" async defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script>
        const sidebarKiri = document.getElementById('sidebar-kiri');
        const toggleBtnKiri = document.getElementById('toggleBtn-kiri');
        const toggleIconKiri = document.getElementById('toggleIcon-kiri');

        toggleBtnKiri.addEventListener('click', () => {
            sidebarKiri.classList.toggle('minimized');
            toggleIconKiri.className = sidebarKiri.classList.contains('minimized') 
                ? 'bi bi-chevron-right' 
                : 'bi bi-chevron-left';
        });

        const sidebarKanan = document.getElementById('sidebar-kanan');
        const toggleBtnKanan = document.getElementById('toggleBtn-kanan');
        const toggleIconKanan = document.getElementById('toggleIcon-kanan');

        toggleBtnKanan.addEventListener('click', () => {
            sidebarKanan.classList.toggle('minimized');
            toggleIconKanan.className = sidebarKanan.classList.contains('minimized') 
                ? 'bi bi-chevron-left' 
                : 'bi bi-chevron-right';
        });

        //legenda
        const sidebarLegenda = document.getElementById('sidebar-legenda');
        const toggleBtnLegenda = document.getElementById('toggleBtn-legenda');
        const toggleIconLegenda = document.getElementById('toggleIcon-legenda');

        toggleBtnLegenda.addEventListener('click', () => {
            sidebarLegenda.classList.toggle('minimized');
            toggleIconLegenda.className = sidebarLegenda.classList.contains('minimized') 
                ? 'bi bi-chevron-left' 
                : 'bi bi-chevron-right';
        });
    </script>
