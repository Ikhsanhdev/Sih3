}

<div id="sidebar-kiri">
    <div class="accordion" id="hidrologi">
        <!-- Kartu Utama: Hidrologi -->
        <div class="card">
            <div class="card-header bg-primary text-white" id="headingHidrologi">
                <h2 class="mb-0">
                    <button class="btn btn-link w-100 text-start text-decoration-none collapsed text-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapaseHidrologi" aria-expanded="false" aria-controls="collapaseHidrologi">
                        <i class="fa-solid fa-tint me-2"></i> Hidrologi
                    </button>
                </h2>
            </div>

            <div id="collapaseHidrologi" class="accordion-collapse collapse show" aria-labelledby="headingHidrologi">
                <div class="card-body">
                    <!-- Nested Accordion: Di dalam Hidrologi -->
                    <div class="accordion" id="accordionNested">
                        <div class="card">
                            <div class="card-header" id="nestedHeadingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link w-100 text-start text-decoration-none collapsed text-accordion" type="button" data-bs-toggle="collapse" data-bs-target="#body-awlr" aria-expanded="false" aria-controls="nestedCollapseOne">
                                        <i class="fa-solid fa-water me-2"></i> AWLR
                                    </button>
                                </h2>
                            </div>
                            <div id="body-awlr" class="accordion-collapse collapse" aria-labelledby="nestedHeadingOne" data-bs-parent="#accordionNested">
                                <div class="card-body" id="awlr-body"></div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="nestedHeadingTwo">
                                <h2 class="mb-0">
                                    <button class="btn btn-link w-100 text-start text-decoration-none collapsed text-accordion" type="button" data-bs-toggle="collapse" data-bs-target="#body-arr" aria-expanded="false" aria-controls="nestedCollapseTwo">
                                        <i class="fa-solid fa-cloud-rain me-2"></i> Curah Hujan
                                    </button>
                                </h2>
                            </div>
                            <div id="body-arr" class="accordion-collapse collapse" aria-labelledby="nestedHeadingTwo" data-bs-parent="#accordionNested">
                                <div class="card-body" id="arr-body"></div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="nestedHeadingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link w-100 text-start text-decoration-none collapsed text-accordion" type="button" data-bs-toggle="collapse" data-bs-target="#body-awlr-arr" aria-expanded="false" aria-controls="nestedCollapseOne">
                                        <i class="fa-solid fa-water me-2"></i> AWLR & ARR
                                    </button>
                                </h2>
                            </div>
                            <div id="body-awlr-arr" class="accordion-collapse collapse" aria-labelledby="nestedHeadingOne" data-bs-parent="#accordionNested">
                                <div class="card-body" id="awlr-arr-body"></div>
                            </div>
                        </div>
                    </div> <!-- End of Nested Accordion -->
                </div>
            </div>
        </div>
    </div><br>

