@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        #map {
            width: 100vw; /* Lebar layar penuh */
            height: 100vh; /* Tinggi layar penuh */
            position: absolute; /* Menutupi seluruh layar */
            top: 0;
            left: 0;
            z-index: 0; /* Urutan tumpukan */
            overflow: hidden;
        }

        #sidebar-kiri {
            position: absolute;
            top: 100px;
            left: 20px;
            width: 400px;
            height: 80vh;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 1;
            transition: transform 0.3s ease;
            overflow-y: auto;
        }

        #sidebar-kanan {
            position: absolute;
            top: 100px;
            right: 20px;
            width: 320px;
            height: 40vh;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 1;
            transition: transform 0.3s ease;
            overflow-y: auto;
        }

        #sidebar-legenda {
            position: absolute;
            bottom: 125px;
            right: 20px;
            width: 320px;
            height: 30vh;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 1;
            transition: transform 0.3s ease;
            overflow-y: auto;
        }

        #sidebar-kanan.minimized {
            transform: translateX(340px);
        }

        #sidebar-legenda.minimized {
            transform: translateX(340px);
        }

        #sidebar-kiri.minimized {
            transform: translateX(-370px);
        }

        /* Tombol toggle */
        #toggleBtn-kiri {
            position: absolute;
            top: 400px;
            left: 418px;
            width: 35px;
            height: 50px;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 20%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            z-index: 2;
            transition: left 0.3s ease;
        }

        #toggleBtn-kanan {
            position: absolute;
            top: 250px;
            right: 338px;
            width: 35px;
            height: 50px;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 20%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            z-index: 2;
            transition: left 0.3s ease;
        }
        
        #toggleBtn-legenda {
            position: absolute;
            bottom: 220px;
            right: 338px;
            width: 35px;
            height: 50px;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 20%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            z-index: 2;
            transition: left 0.3s ease;
        }

        #sidebar-kiri.minimized + #toggleBtn-kiri {
            left: 0px;
        }

        #sidebar-kanan.minimized + #toggleBtn-kanan {
            right: 0px;
        }

        #sidebar-legenda.minimized + #toggleBtn-legenda {
            right: 0px;
        }

        #toggleBtn-kiri i {
            font-size: 14px;
        }

        #toggleBtn-kanan i {
            font-size: 14px;
        }

        #toggleBtn-legenda i {
            font-size: 14px;
        }

        .reading-at {
            font-size: 10px;
        }

        .text-station-name {
            font-size: 12px;
        }

        .bg-siaga1 {
            background-color: #EF5350;
        }

        .bg-siaga2 {
            background-color: rgba(242,131,35);
        }

        .bg-siaga3 {
            background-color: rgba(247,184,75);
        }

        .bg-normal {
            background-color: rgba(26,188,156);
        }

        .bg-nostatus {
            background-color: rgba(204, 204, 204);
        }

        /* progress meter */
        .progress-meter {
            min-height: 6px;
        }

        .progress-meter > .meter {
            position: relative;
            float: left;
            min-height: 6px;
            border-width: 0px;
            border-style: solid;
            border-color: rgb(160, 160, 160);
        }

        .progress-meter > .meter:hover {
            cursor: pointer;
        }

        .progress-meter > .meter-normal {
            background-color: #4DC27E;
            border-top-left-radius: 8px;
            border-bottom-left-radius: 8px;
        }

        .progress-meter > .meter-waspada {
            background-color: #FFDA4F;
        }

        .progress-meter > .meter-siaga {
            background-color: #FFA600;
        }

        .progress-meter > .meter-awas {
            background-color: #EF5350;
            border-top-right-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        .progress-meter > .meter-left {
            border-left-width: 1px;
        }

        .progress-meter > .meter > .meter-text {
            position: absolute;
            display: inline-block;
            bottom: -18px;
            width: 100%;
            font-weight: 600;
            font-size: 0.65em;
            color: rgb(160, 160, 160);
            text-align: left;
        }
    </style>
}

