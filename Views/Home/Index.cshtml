<!-- Tombol toggle -->
<button id="toggleBtn-kiri" title="Minimize">
    <i id="toggleIcon-kiri" class="bi bi-chevron-left"></i>
</button>

<div class="card" id="sidebar-kanan">
    <div class="card-header" style="background: #354779;">
        <h6 class="card-title mb-0 text-white">
            <i class="fa-solid fa-triangle-exclamation"></i> 
            Sensor Offline
            <span class="sensor-count" id="sensorCount">0</span>
        </h6>
    </div>

    <div class="card-body">
        <div class="row m-b-halfrow offline-sensor-showhide">
            <div class="col-xs-12">
                <div class="text-muted text-center p-2" style="background-color: #f0f0f0; border-radius: 4px; font-size: 12px;">
                    Untuk sensor yang offline &gt; 12 jam
                </div>
            </div>
        </div>

        <div id="sensorList">
            <!-- Sensor items will be populated here -->
        </div>
        
        <div class="empty-state" id="emptyState" style="display: none;">
            <i class="fa-solid fa-check-circle"></i>
            <p class="mb-0">Semua sensor online</p>
        </div>
    </div>
</div>

<button id="toggleBtn-kanan" title="Minimize">
    <i id="toggleIcon-kanan" class="bi bi-chevron-right"></i>
</button>

<div class="card" id="sidebar-legenda">
    <div class="card-header" style="background: #354779;">
        <h6 class="card-title mb-0 text-white">
            <i class="fa-solid fa-layer-group"></i> 
            Legenda
        </h6>
    </div>

    <div class="card-body small">
        <div class="mb-2">
            <i class="fa-solid fa-droplet me-2" style="color: green;"></i> 
            <span class="text-muted">DAS Kapuas</span>
        </div>
        <div class="mb-2">
            <i class="fa-solid fa-droplet me-2" style="color: red;"></i> 
            <span class="text-muted">DAS Sambas</span>
        </div>
        <div class="mb-2">
            <i class="fa-solid fa-droplet me-2" style="color: orange;"></i> 
            <span class="text-muted">DAS Pawan</span>
        </div>

        <hr class="my-2" />

        
        <div class="mb-2">
            <img src="~/assets/img/awlr-marker.png" width="25" alt="">
            <span class="text-muted"> AWLR</span>
        </div>
        <div class="mb-2">
            <img src="~/assets/img/arr-marker.png" width="25" alt="">
            <span class="text-muted"> ARR</span>
        </div>
    </div>
</div>

<button id="toggleBtn-legenda" title="Minimize">
    <i id="toggleIcon-legenda" class="bi bi-chevron-right"></i>
</button>

<div id="map"></div>

@section Scripts {
    <script src="~/js/pages/Home/Home.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap" async defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.43/moment-timezone-with-data.min.js"></script>
    <script src="~/lib/magnific-popup/jquery.magnific-popup.min.js"></script>

    <script>
        const sidebarKiri = document.getElementById('sidebar-kiri');
        const toggleBtnKiri = document.getElementById('toggleBtn-kiri');
        const toggleIconKiri = document.getElementById('toggleIcon-kiri');

        toggleBtnKiri.addEventListener('click', () => {
            sidebarKiri.classList.toggle('minimized');
            toggleIconKiri.className = sidebarKiri.classList.contains('minimized') 
                ? 'bi bi-chevron-right' 
                : 'bi bi-chevron-left';
        });

        const sidebarKanan = document.getElementById('sidebar-kanan');
        const toggleBtnKanan = document.getElementById('toggleBtn-kanan');
        const toggleIconKanan = document.getElementById('toggleIcon-kanan');

        toggleBtnKanan.addEventListener('click', () => {
            sidebarKanan.classList.toggle('minimized');
            toggleIconKanan.className = sidebarKanan.classList.contains('minimized') 
                ? 'bi bi-chevron-left' 
                : 'bi bi-chevron-right';
        });

        //legenda
        const sidebarLegenda = document.getElementById('sidebar-legenda');
        const toggleBtnLegenda = document.getElementById('toggleBtn-legenda');
        const toggleIconLegenda = document.getElementById('toggleIcon-legenda');

        toggleBtnLegenda.addEventListener('click', () => {
            sidebarLegenda.classList.toggle('minimized');
            toggleIconLegenda.className = sidebarLegenda.classList.contains('minimized') 
                ? 'bi bi-chevron-left' 
                : 'bi bi-chevron-right';
        });
    </script>
}