@{
    ViewData["Title"] = "Detail Article";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>
    <link href="~/lib/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css" />

    <link href="~/asset/css/pace.min.css" rel="stylesheet">

    <!--plugins-->
    <link href="~/asset/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/asset/plugins/metismenu/metisMenu.min.css">
    <link rel="stylesheet" type="text/css" href="~/asset/plugins/metismenu/mm-vertical.css">
    <link rel="stylesheet" type="text/css" href="~/asset/plugins/simplebar/css/simplebar.css">
    <!--bootstrap css-->
    @* <link href="~/asset/css/bootstrap.min.css" rel="stylesheet"> *@
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons+Outlined" rel="stylesheet">
    <!--main css-->
    <link href="~/asset/css/bootstrap-extended.css" rel="stylesheet">
    <link rel="stylesheet" href="~/asset/css/extra-icons.css">
    <link href="~/sass/main.css" rel="stylesheet">
    <link href="~/sass/responsive.css" rel="stylesheet">
    <style>
        #pricing {
            background: linear-gradient(120deg, #354779, #ffc829) !important;           
        }

        .article-meta {
            font-size: 16px;
            color: white;
        }

        .article-meta span {
            font-weight: 500;
        }

        .article-meta i {
            font-size: 20px;
            color: white;
        }
    </style>
}

<section id="pricing" class="pricing section">
    <div class="container section-title title-article" data-aos="fade-up">
        <h2 style="margin-bottom: 5px;">Article | Detail</h2>
        <div><span>Meningkatkan Produktivitas di Era Digital: Tips dan Strategi</span></div>
    </div>

    <div class="container title-article article-meta d-flex align-items-center gap-3 mt-3">
        <button type="button" class="btn btn-grd-info text-light">Hidrologi</button>
        <span class="text-white d-flex align-items-center">
            <i class="bx bx-calendar me-1"></i> 21-07-2025
        </span>
        <span class="text-white d-flex align-items-center">
            <i class="bx bx-user me-1"></i> Admin
        </span>
    </div>
</section>

@section Scripts {
    <script src="~/asset/js/pace.min.js"></script>
}